<page>
    <display-name>Default</display-name>
    <config>
        <field-set name="Selector">
            <label>Page Properties</label>
            <items>
                <input type="TextLine" name="title">
                    <label>Title</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>
                <input type="ComboBox" name="color_scheme">
                    <label>Color Configuration</label>
                    <occurrences minimum="0" maximum="1"/>
                    <help-text>It is possible to override these colors using CSS</help-text>
                    <config>
                        <option value="purple-indigo">Primary: Purple, Accent: Indigo </option>
                        <option value="indigo-deep_purple">Primary: Indigo, Accent: Deep Purple</option>
                        <option value="green-light_green">Primary: Green, Accent: Light Green</option>
                        <option value="blue_grey-red">Primary: Blue, Accent: Grey-Red</option>
                        <option value="cyan-blue">Primary: Cyan, Accent: Blue</option>
                        <option value="red-blue">Primary: Red, Accent: Blue</option>
                    </config>
                    <default>purple-indigo</default>
                </input>

                <input type="CheckBox" name="fixed_header">
                    <label>Fixed Header (All screen sizes)</label>
                    <occurrences minimum="0" maximum="1"/>
                    <default>checked</default>
                    <config>
                        <alignment>left</alignment>
                    </config>
                </input>

                <input type="CheckBox" name="fixed_drawer">
                    <label>Fixed Drawer (On bigger screens)</label>
                    <occurrences minimum="0" maximum="1"/>
                    <default>checked</default>
                    <config>
                        <alignment>left</alignment>
                    </config>
                </input>

                <input type="CheckBox" name="drawer">
                    <label>Drawer</label>
                    <occurrences minimum="0" maximum="1"/>
                    <default>checked</default>
                    <config>
                        <alignment>left</alignment>
                    </config>
                </input>

                <input type="CheckBox" name="layout_footer">
                    <label>Footer</label>
                    <occurrences minimum="0" maximum="1"/>
                    <default>checked</default>
                    <config>
                        <alignment>left</alignment>
                    </config>
                </input>

                <input type="TextLine" name="footer_title">
                    <label>Footer Title</label>
                    <occurrences minimum="0" maximum="1"/>
                </input>

                <input type="ImageSelector" name="background-image">
                    <label>Background Image</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config></config>
                </input>


            </items>
        </field-set>
    </config>
    <regions>
        <region name="mdl-content"/>
    </regions>
</page>
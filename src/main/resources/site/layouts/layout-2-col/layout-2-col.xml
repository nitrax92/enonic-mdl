<layout>
    <display-name>Desktop, Tablet: 50/50 | Phone: 100</display-name>
    <config>
        <field-set name="Selector">
            <label>Layout Properties</label>
            <items>
                <input type="CheckBox" name="no_spacing">
                    <label>Remove Spacing.</label>
                    <occurrences minimum="0" maximum="1"/>
                    <default></default>
                    <config>
                        <alignment>left</alignment>
                    </config>
                </input>
            </items>
        </field-set>
    </config>
    <regions>
        <region name="1"/>
        <region name="2"/>
    </regions>
</layout>
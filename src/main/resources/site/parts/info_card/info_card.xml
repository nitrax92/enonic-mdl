<part>
    <display-name>Info</display-name>
    <config>
        <field-set name="info_card">
            <label>Things</label>
            <items>
                <input type="TextLine" name="info_title">
                    <label>Title</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="TextArea" name="info_content">
                    <label>Main Information</label>
                    <occurrences minimum="1" maximum="1"/>
                </input>
                <input type="ImageSelector" name="info_image">
                    <label>Article image</label>
                    <occurrences minimum="0" maximum="1"/>
                    <config></config>
                </input>
            </items>
        </field-set>
    </config>
</part>